var interest = 3;

$(document).ready(function() {
    $('#forward1').hide();
    $('#backward3').hide();
});


function addSlideToCard(){
    $('body').off('click').on('click','#forward' + interest, function (event) {
        if(interest>1){
            console.log(interest);
            $('#slide' + interest).addClass("shift-slide");
            $('#slide' + interest).removeClass("shift-back");
            interest--;
        }
    });
}


function resetCard(){
    $('body').off('click').on('click','#backward' + interest, function (event) {
        if(interest<6){
            interest++;
            console.log(interest);
            $('#slide' + interest).addClass("shift-back");
            $('#slide' + interest).removeClass("shift-slide");
        }
    });
}