      </div>
    </div>
    <div class="card-group col">
      <% @interests.each do |interest| %>
        <div>
          <div id="slide<%=interest.id%>" class="col-sm card card-index bg-light mb-3 slide<%=interest.id%>">
            <%= image_tag "#{interest.image_name}.jpg", size:"256x256",  class: "card-img-top"%>
            <div class="card-body text-info">
              <h5 class="card-title"><%= interest.read_attribute(:name) %></h5>
              <p class="card-text"><%= interest.read_attribute(:description) %></p>
              <%= link_to "Back", "#", class: "btn btn-info", id: "backward#{interest.id}", onclick: "resetCard();" %>
              <%= link_to "Display", "#", class: "btn btn-info", "data-toggle" => "modal", "data-target" => "#cardModal#{interest.id}" %>
              <%= link_to "Next", "#", class: "btn btn-info", id: "forward#{interest.id}", onclick: "addSlideToCard();" %>
            </div>
          </div>
        </div>
        <div class="modal fade" id="cardModal<%=interest.id%>" tabindex="-1" role="dialog" aria-labelledby="cardModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title" id="cardModalLabel"><%=interest.name.capitalize%></h1>
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%=interest.long_description%>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

